---
const pathname = new URL(Astro.request.url).pathname;

const links = [
  {
    url: "/works/",
    label: "Works",
  },
  {
    url: "/exhibitions/",
    label: "Exhibitions",
  },
  {
    url: "/murals/",
    label: "Murals",
  },
  {
    url: "/editions/",
    label: "Editions",
  },
  {
    url: "/textiles/",
    label: "Textiles",
  },
  {
    url: "/about/",
    label: "About",
  },
];

const currentLink = links.find((link) => link.url === pathname);
const subLinks = currentLink
  ? links.filter((link) => link.url !== currentLink.url)
  : links.slice(1);
---

<nav class="navbar">
  <div class="container">
    <div class="navbar__inner">
      <a class="navbar__logo" href="/">
        <h1>Paulina WÅ‚ostowska</h1>
      </a>
      <ul class="navbar__links navbar__links--mobile">
        {
          links.map((link) => (
            <li class="navbar__link-wrapper">
              <a
                class="navbar__link"
                style={{
                  textDecoration:
                    link.url === currentLink?.url ? "underline" : "none",
                }}
                href={link.url}
              >
                {link.label}
              </a>
            </li>
          ))
        }
      </ul>
      <ul class="navbar__links navbar__links--desktop">
        <li class="navbar__link-wrapper">
          {
            currentLink && (
              <a class="navbar__link" href={currentLink.url}>
                {currentLink.label}
              </a>
            )
          }

          {
            !currentLink && (
              <a class="navbar__link" href={links[0].url}>
                {links[0].label}
              </a>
            )
          }

          <ul class="navbar__child-links">
            {
              subLinks.map((link) => (
                <li class="navbar__link-wrapper">
                  <a class="navbar__link" href={link.url}>
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>

<style lang="scss">
  .navbar {
    position: relative;
    z-index: 2;
    font-size: 4.25vw;
    padding: 1rem 0 1.5rem;

    @media (min-width: 768px) {
      font-size: min(2.7vw, 3rem);
    }

    &__inner {
      display: flex;
      flex-direction: column;
      gap: 0.75em;

      @media (min-width: 768px) {
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        gap: 2em;
      }
    }

    &__links {
      display: flex;
      gap: 0.5em;

      &--mobile {
        flex-wrap: wrap;
        column-gap: 0.75em;
        row-gap: 0.25em;

        @media (hover: hover) {
          display: none;
        }
      }

      &--desktop {
        @media (hover: none) {
          display: none;
        }
      }
    }

    &__link-wrapper {
      &:hover {
        > .navbar__child-links {
          opacity: 1;
          visibility: visible;
          z-index: 1;
        }
      }
    }

    &__child-links {
      width: auto;
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      justify-content: space-between;
      position: absolute;
      top: 100%;
      right: $container-gutter;
      visibility: hidden;
      opacity: 0;
      z-index: -1;
    }

    &__logo,
    &__link {
      @media (hover: hover) {
        &:hover {
          text-decoration: line-through wavy var(--accent-color);
          text-decoration-thickness: 0.2em;
        }
      }
    }
  }
</style>
