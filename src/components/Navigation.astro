<style lang="scss">
  .navbar {
    position: relative;
    z-index: 2;
    font-size: 3vw;
    padding: 0.5em 0 1.5em;

    &__inner {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    &__links {
      display: flex;
      gap: 1.5em;
    }

    &__link-wrapper {
      &:hover {
        > .navbar__child-links {
          opacity: 1;
          visibility: visible;
          z-index: 1;
        }
      }
    }

    &__child-links {
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      justify-content: space-between;
      position: absolute;
      top: 100%;
      left: 0;
      visibility: hidden;
      opacity: 0;
      z-index: -1;
    }

    &__link {
      border-bottom: 0.1em solid transparent;

      &.-is-active {
        border-color: currentColor;
      }

      @media (hover: hover) {
        &:hover {
          color: $accent-color;
        }
      }
    }
  }
</style>
