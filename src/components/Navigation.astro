---
const pathname = new URL(Astro.request.url).pathname;

const links = [
  {
    url: "/works/",
    label: "Works",
  },
  {
    url: "/exhibitions/",
    label: "Exhibitions",
  },
  {
    url: "/murals/",
    label: "Murals",
  },
  {
    url: "/editions/",
    label: "Editions",
  },
  {
    url: "/about/",
    label: "About",
  },
];

const currentLink = links.find((link) => link.url === pathname);
const subLinks = currentLink
  ? links.filter((link) => link.url !== currentLink.url)
  : links.slice(1);
---

<nav class="navbar">
  <div class="container">
    <div class="navbar__inner">
      <a class="navbar__logo" href="/">
        <h1>Paulina WÅ‚ostowska</h1>
      </a>
      <ul class="navbar__links">
        <li class="navbar__link-wrapper">
          {
            currentLink && (
              <a class="navbar__link" href={currentLink.url}>
                {currentLink.label}
              </a>
            )
          }

          {
            !currentLink && (
              <a class="navbar__link" href={links[0].url}>
                {links[0].label}
              </a>
            )
          }

          <ul class="navbar__child-links">
            {
              subLinks.map((link) => (
                <li class="navbar__link-wrapper">
                  <a class="navbar__link" href={link.url}>
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>

<style lang="scss">
  .navbar {
    position: relative;
    z-index: 2;
    font-size: 3vw;
    padding: 0.5em 0 1.5em;

    &__inner {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    &__links {
      display: flex;
      gap: 1.5em;
    }

    &__link-wrapper {
      &:hover {
        > .navbar__child-links {
          opacity: 1;
          visibility: visible;
          z-index: 1;
        }
      }
    }

    &__child-links {
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      justify-content: space-between;
      position: absolute;
      top: 100%;
      left: 0;
      visibility: hidden;
      opacity: 0;
      z-index: -1;
    }

    &__logo,
    &__link {
      @media (hover: hover) {
        &:hover {
          text-decoration: line-through wavy var(--accent-color);
          text-decoration-thickness: .2em;
        }
      }
    }
  }
</style>
