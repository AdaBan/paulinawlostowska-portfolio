---
import { contentfulClient } from "../lib/contentful";
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";
import Layout from "../layouts/Layout.astro";
import "../styles/global.scss";

const entries = await contentfulClient.getEntries<any>({
  content_type: "aboutPage",
});

const data: any = entries.items[0];
const text = documentToHtmlString(data.fields.text);
---

<Layout title="About - Paulina WÅ‚ostowska">
  <main>
    <div class="container">
      <div class="about">
        <div class="rich-text" set:html={text} />
      </div>
    </div>
  </main>
</Layout>

<style lang="scss">
  .about {
    padding-bottom: 7.5rem;
  }
</style>
