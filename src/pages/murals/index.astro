---
import { contentfulClient } from "../../lib/contentful";
import Layout from "../../layouts/Layout.astro";
import "../../styles/global.scss";
import ProjectsList from "../../components/ProjectsList.astro";

const entries = await contentfulClient.getEntries<any>({
  content_type: "projectPage",
  "fields.type": "mural",
  order: "-fields.startDate",
});

const projects: any[] = entries.items;
---

<Layout title={`Murals - Paulina WÅ‚ostowska`}>
  <main class="container">
    <ProjectsList projects={projects} />
  </main>
</Layout>

<style lang="scss">
  .projects-list {
    display: flex;
    flex-direction: column;
    font-size: 2.5vw;

    &__link {
      display: block;
      padding: 0.6em 0 0.5em;
      border-bottom: 0.08em solid;

      &:hover {
        color: var(--accent-color);
      }
    }
  }
</style>
