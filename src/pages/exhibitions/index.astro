---
import { contentfulClient } from "../../lib/contentful";
import Layout from "../../layouts/Layout.astro";
import "../../styles/global.scss";

const entries = await contentfulClient.getEntries<any>({
  content_type: "projectPage",
  "fields.type": "exhibition",
  order: "-fields.startDate",
});

const projects: any[] = entries.items;
---

<Layout title={`Exhibitions - Paulina WÅ‚ostowska`}>
  <main class="container">
    <ul class="projects-list">
      {
        projects.map((project) => (
          <li class="projects-list__item">
            <a
              class="projects-list__link"
              href={`/${project.fields.slug}/`}
            >
              {project.fields.name}
            </a>
          </li>
        ))
      }
    </ul>
  </main>
</Layout>

<style lang="scss">
  .projects-list {
    display: flex;
    flex-direction: column;
    font-size: 2.5vw;

    &__link {
      display: block;
      padding: 0.6em 0 0.5em;
      border-bottom: 0.08em solid;

      &:hover {
        color: magenta;
      }
    }
  }
</style>
